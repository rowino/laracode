{
    "name": "laracode/laracode",
    "description": "Laravel Autonomous Coding Engine - AI-powered development companion",
    "keywords": ["laravel", "ai", "coding", "autonomous", "cli"],
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Raphael"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel-zero/framework": "^12.0.2"
    },
    "require-dev": {
        "larastan/larastan": "^3.8",
        "laravel/pint": "^1.25.1",
        "mockery/mockery": "^1.6.12",
        "pestphp/pest": "^3.8.4|^4.1.2",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "bin": ["laracode"],
    "scripts": {
        "lint": "./vendor/bin/pint",
        "test": "./vendor/bin/pest",
        "phpstan": "./vendor/bin/phpstan analyse",
        "checks": [
            "@lint",
            "@test",
            "@phpstan"
        ]
    }
}
